procedure Tdm.FDPhysMySQLDriverLink1DriverCreated(Sender: TObject);
var
caminho : string;
begin
  caminho := GetCurrentDir + '\lib\libmySQL.dll';
  FDPhysMySQLDriverLink1.VendorLib := caminho;

end;

